{
  "name": "GitHub Login",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Log in to your GitHub account",
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "permissions": ["identity", "https://api.github.com/*","https://github.com/*",
  "tabs", "unlimitedStorage",
  "storage",
  "declarativeNetRequest",
  "declarativeNetRequestWithHostAccess"],

  "host_permissions" : ["https://github.com/"],

  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "default_popup": "popup.html"
  },
  "web_accessible_resource":[
    {
      "matches": 
      ["<all_urls>"],

      "resources":[
        "library/jquery-3.3.1.min.js",
        "popup.html",
        "popup.js",
        "index.html",
        "index.js"
      ]
    }
  ],
  "background":{
    "service_worker": "background.js"
    
  },

  "content_scripts" :[
    {
      "matches" :[
        "https://github.com/*"
      ],
      "js" :[
        "scripts/authorize.js"
      ],
      "run_at" : "document_idle"
    }
  ]
 
}